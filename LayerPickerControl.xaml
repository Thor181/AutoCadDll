<UserControl x:Class="ACDll.LayerPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACDll"
             mc:Ignorable="d">
    <Grid d:Background="White">
        <StackPanel x:Name="LayerControlStackPanel" Orientation="Horizontal">
            <CheckBox x:Name="LayerControlCheckbox" VerticalAlignment="Center" IsChecked="{Binding Checked, Mode=OneWayToSource}"/>
            <TextBlock x:Name="LayerControlTextblock" d:Text="TEXT TEXT" Text="{Binding LayerName}" VerticalAlignment="Center" Margin="3 0 0 0"/>
        </StackPanel>  
    </Grid>
</UserControl>
