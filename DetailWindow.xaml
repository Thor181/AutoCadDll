<Window x:Class="ACDll.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACDll"
        mc:Ignorable="d" x:Name="MainWindowX" 
        Title="Подробно" Height="450" Width="700" WindowStartupLocation="CenterOwner">
    <Grid>
        <Button x:Name="ClearDetailButton" Height="20" Width="80" Margin="5 5 5 0" Padding="0" 
                VerticalContentAlignment="Center" Content="Очистить" Click="ClearDetailButton_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top" />
        <ScrollViewer Margin="5 30 -13 0">
            <VirtualizingStackPanel>
                <TextBlock  x:Name="DetailTextblock" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBlock>
            </VirtualizingStackPanel>
        </ScrollViewer>
    </Grid>
</Window>
